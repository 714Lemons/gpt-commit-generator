{
  "name": "gpt-commit-generator",
  "repository": {
    "type": "git",
    "url": "https://github.com/714Lemons/gpt-commit-generator"
  },
  "publisher": "KarlMoritzWildenhain",
  "displayName": "GPT Commit Generator",
  "description": "Generates commit messages based on uncommited changes. Saves developers time by creating informative commit messages.",
  "version": "0.0.12",
  "icon": "images/Icon.png",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gpt-commit-generator.generateCommit",
        "title": "Generate Commit"
      }
    ],
    "configuration": {
      "properties": {
        "gpt-commit-generator.organization": {
          "type": "string",
          "default": "",
          "description": "The organization ID for OpenAI"
        },
        "gpt-commit-generator.apiKey": {
          "type": "string",
          "default": "",
          "description": "The API key for OpenAI"
        },
        "gpt-commit-generator.text": {
          "type": "string",
          "default": "The following changes are tracked by git. Create a commit message with the most important bullet points and a short Title with words like UPDATED, ADDED, FIXED or REMOVED. After the title, add a blank line and then the bullet points. The bullet points should describe the changes in more detail but not longer than needed. Changes:",
          "description": "The fixed text sent to the GPT model (excluding changes)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "openai": "^3.2.1"
  }
}
